<!DOCTYPE html>
<html>
  <head>
    <title>add student</title>
    <%- include layout/link_head %>
  </head>
  <body>
    <%- include layout/header %>
    
    <h3>STUDENT ADD FORM</h3>
    
    <% if (error != '') { %>
    <div class="alert alert-info">
      <strong>Info!</strong> <%= error %>
    </div>      
    <% } %>
    
    <form action="/students/add" method="post" class="form-horizontal">
      <div class="form-group">
        <label class="control-label col-sm-2">First Name :</label>
        <div class="col-sm-10">
          <p class="form-control-static"><input type="text" name="firstname"/></p>
        </div>
      </div>
      
      <div class="form-group">
        <label class="control-label col-sm-2">Last Name :</label>
        <div class="col-sm-10">
          <p class="form-control-static"><input type="text" name="lastname"/></p>
        </div>
      </div>
      
      <div class="form-group">
        <label class="control-label col-sm-2">Email :</label>
        <div class="col-sm-10">
          <p class="form-control-static"><input type="text" name="email"/></p>
        </div>
      </div>
      
      <div class="form-group">
        <label class="control-label col-sm-2"></label>
        <div class="col-sm-10">
          <input type="submit" class="btn btn-success" value="ADD Student"/> 
        </div>
      </div>
    
  </body>
</html>