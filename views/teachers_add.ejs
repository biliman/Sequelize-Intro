<!DOCTYPE html>
<html>
  <head>
    <title>add teacher</title>
    <%- include layout/link_head %>
  </head>
  <body>
    <%- include layout/header %>
    <div class="container">
      <h3>TEACHER ADD FORM</h3>
      <form action="/teachers/add" method="post" class="form-horizontal">
        <div class="form-group">
          <label class="control-label col-sm-2">First Name :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><input type="text" name="firstname"/></p>
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-sm-2">Last Name :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><input type="text" name="lastname"/></p>
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-sm-2">Email :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><input type="text" name="email"/></p>
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-sm-2"></label>
          <div class="col-sm-10">
            <input type="submit" class="btn btn-success" value="ADD Teacher"/> 
          </div>
        </div>
    </div>
  </body>
</html>