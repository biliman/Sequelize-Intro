<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Subjects</title>
    <%- include layout/link_head %>
  </head>
  <body>
    <%- include layout/header %>    
    
    <!-- <%= JSON.stringify(subjects, null, 2) %> -->
    <h2 align="center">SUBJECTS DATA</H2>
    <h5 align="center"><button class="btn btn-success" id="hyper" type="button" onclick="location.href='/subjects/add'">ADD New Subject</button></h5>
    <p></p>
    <table class="table table-hover">
      <tr>
        <th>No.</th>
        <th>Subject Name</th>
        <th>Teacher's</th>
        <th>ACTION</th>
        <th>OPTIONS</th>
      </tr>
      <% subjects.forEach((subject, nomor) => { %>
        <!-- <%= JSON.stringify(subject) %> -->
      <tr>
        <td><%= nomor + 1 %></td>    
        <td><%= subject.subject_name %></td>
        <td>
          <% subject.Teachers.forEach((teacher, no) => { %>
            <p><%= no + 1 %>. <%= teacher.first_name + ' ' + teacher.last_name %></p>
          <% }) %>  
        </td>
        <td><a href="/subjects/<%= subject.id %>/enrolledstudents" style="color:#e08804">ENROLLED STUDENTS</a></td>
        <td><a href="/subjects/edit/<%= subject.id %>">EDIT</a> || <a href="/subjects/delete/<%= subject.id %>" style="color:red" onclick="return confirm('Are you sure want to delete this record?')">DELETE</a></td> 
      </tr>
      <% }) %>
    </table>
  </body>
</html>