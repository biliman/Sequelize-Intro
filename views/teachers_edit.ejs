    <h3>TEACHER EDIT FORM</h3>
    <form action="/teachers/edit/<%= query.id %>" method="post" class="STYLE-NAME">
      <input value="<%= query.first_name %>" id="name" type="text" name="firstname" placeholder="First Name" /><br><br>
      <input value="<%= query.last_name %>" id="name" type="text" name="lastname" placeholder="Last Name" /><br><br>
      <input value="<%= query.email %>" id="name" type="text" name="email" placeholder="Email" /><br><br>
      <!-- <input value="<%=  %>" id="name" type="text" name="email" placeholder="Subjects" /> -->
      <select name="subject">
      <% if (query.SubjectId == undefined) { %> 
        <option value="">unassigned</option><br>        
        <% query2.forEach(d2 => { %> 
        <option value="<%= d2.id %>"><%= d2.subject_name %></option>
        <% }) %>
      <% } else { %>
        <option selected="<%= query.SubjectId %>"><%= query.Subject.subject_name %></option>
        <% query2.forEach(d2 => { %>
        <option value="<%= d2.id %>"><%= d2.subject_name %></option>
        <% }) %>
      <% } %> 
      </select> <br><br>
      <input type="submit" class="button" value="Edit Teacher" />
    </form>
  </body>
