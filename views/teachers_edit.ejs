<!DOCTYPE html>
<html>
  <head>
    <title>edit teacher</title>
    <%- include layout/link_head %>
  </head>
  <body>
    <!-- <%= JSON.stringify(query, null, 2) %>
    <br>================================================================================<br>
    <%= JSON.stringify(query2, null, 2) %> -->
    <%- include layout/header %>
    <div class="container">
      <h3>TEACHER EDIT FORM</h3>
      <form action="/teachers/edit/<%= query.id %>" method="post" class="form-horizontal">
        <div class="form-group">
          <label class="control-label col-sm-2">First Name :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><input value="<%= query.first_name %>" type="text" name="firstname"/></p>
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-sm-2">Last Name :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><input value="<%= query.last_name %>" type="text" name="lastname"/></p>
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-sm-2">Email :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><input value="<%= query.email %>" type="text" name="email"/></p>
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-sm-2">Choose Subject :</label>
          <div class="col-sm-10">
            <select name="subject" class="control-label col-sm-2 btn btn-primary btn-select btn-select-light">
            <% if (query.SubjectId == undefined) { %>
              <option value="">unassigned</option><br>
              <% query2.forEach(d2 => { %> 
                <option value="<%= d2.id %>"><%= d2.subject_name %></option>
                <% }) %>
              <% } else { %>
                <option selected="<%= query.SubjectId %>"><%= query.Subject.subject_name %></option>
                <% query2.forEach(d2 => { %>
                <option value="<%= d2.id %>"><%= d2.subject_name %></option>
                <% }) %>
              <% } %> 
            </select>
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-sm-2"></label>
          <div class="col-sm-10">
            <input type="submit" class="btn btn-success" value="Edit Teacher" /> 
          </div>
        </div>
    </div>
    
  </body>
</html>