    <div class="container">
      <h3>STUDENT ADD SUBJECT FORM</h3>
      <form action="/students/<%= query.id %>/addsubject" method="post" class="form-horizontal">
        <div class="form-group">
          <label class="control-label col-sm-2">First Name :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><input value="<%= query.first_name %>" type="text" name="firstname" readonly="" style="background-color:#dcdce2"/></p>
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-sm-2">Last Name :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><input value="<%= query.last_name %>" type="text" name="lastname" readonly="" style="background-color:#dcdce2"/></p>
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-sm-2">Email :</label>
          <div class="col-sm-10">
            <p class="form-control-static"><input value="<%= query.email %>" type="text" name="email" readonly="" style="background-color:#dcdce2"/></p>
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-sm-2">Choose Subject :</label>
          <div class="col-sm-10">
            <select name="subject" class="control-label col-sm-2 btn btn-primary btn-select btn-select-light">
            <% query2.forEach(d2 => { %>
              <option value="<%= d2.id %>"><%= d2.subject_name %></option>
            <% }) %>
            </select>
            
            <!-- <% if (query.SubjectId == undefined) { %> 
              <option value="">unassigned</option><br>        
