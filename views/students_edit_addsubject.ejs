              <% }) %>
            <% } else { %>
              <option selected="<%= query.SubjectId %>"><%= query.Subject.subject_name %></option>
              <% query2.forEach(d2 => { %>
              <option value="<%= d2.id %>"><%= d2.subject_name %></option>
              <% }) %>
            <% } %> 
            </select> -->
          </div>
        </div>
        
        <div class="form-group">
          <label class="control-label col-sm-2"></label>
          <div class="col-sm-10">
            <input type="submit" class="btn btn-success" value="Edit Student" /> 
          </div>
        </div>
    </div>
  </body>
</html>